{
  "name": "tsc-runner",
  "version": "0.0.1",
  "description": "TypeScript wrapper for running type checking on specific files while respecting tsconfig.json",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "tsc-runner": "dist/index.js"
  },
  "files": [
    "dist/",
    "src/",
    "README.md",
    "package.json"
  ],
  "scripts": {
    "build": "tsc",
    "test": "npm run build && node --test test/*.test.js",
    "test:watch": "npm run build && node --test --watch test/*.test.js",
    "test:demo": "node dist/index.js test/fixtures/test-file.ts",
    "dev": "tsc && node dist/index.js test/fixtures/test-file.ts"
  },
  "author": "Bojan RatkoviÄ‡",
  "license": "MIT",
  "dependencies": {
    "resolve-from": "^5.0.0"
  },
  "peerDependencies": {
    "typescript": ">=5.0.0",
    "vue-tsc": ">=1.0.0",
    "@glint/core": ">=1.0.0"
  },
  "peerDependenciesMeta": {
    "vue-tsc": { "optional": true },
    "@glint/core": { "optional": true }
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "typescript": "^5.0.0"
  },
  "packageManager": "pnpm@9.0.0"
}
