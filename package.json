{
  "name": "typescript-file-checker",
  "version": "0.1.2",
  "description": "Smart TypeScript checker for individual files (while respecting tsconfig.json) or full projects with automatic tool detection (tsc/glint/vue-tsc)",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "typescript-file-checker": "dist/index.js",
    "tsc-check": "dist/index.js"
  },
  "keywords": [
    "typescript",
    "tsc",
    "glint",
    "vue-tsc",
    "type-checking",
    "lint-staged",
    "git-hooks",
    "ci"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/BojanRatkovic/typescript-file-checker.git"
  },
  "homepage": "https://github.com/BojanRatkovic/typescript-file-checker#readme",
  "bugs": {
    "url": "https://github.com/BojanRatkovic/typescript-file-checker/issues"
  },
  "files": [
    "dist/",
    "README.md",
    "package.json"
  ],
  "scripts": {
    "build": "tsc",
    "test": "npm run build && node --test test/*.test.js",
    "test:watch": "npm run build && node --test --watch test/*.test.js",
    "test:demo": "node dist/index.js test/fixtures/test-file.ts",
    "dev": "tsc && node dist/index.js test/fixtures/test-file.ts",
    "prepublishOnly": "npm run build && npm test"
  },
  "author": "Bojan RatkoviÄ‡",
  "license": "MIT",
  "dependencies": {
    "resolve-from": "^5.0.0"
  },
  "peerDependencies": {
    "typescript": ">=5.0.0",
    "vue-tsc": ">=1.0.0",
    "@glint/core": ">=1.0.0"
  },
  "peerDependenciesMeta": {
    "vue-tsc": { "optional": true },
    "@glint/core": { "optional": true }
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "typescript": "^5.0.0"
  },
  "packageManager": "pnpm@9.0.0"
}
